- if user_signed_in?
  .pull-right
    #{current_user.email}
    =link_to 'Выход', destroy_user_session_path, :method => :delete
- else
  %a.pull-right.small#openBtn{"data-toggle" => "modal", href: "#myModal"} Вход
  #myModal.modal.fade.in
    .modal-dialog
      .modal-content
        .modal-header
          %a.btn.btn-default{"aria-hidden" => "true", "data-dismiss" => "modal", type: "button"} 
            %span.glyphicon.glyphicon-remove
          %h4.modal-title Вход на сайт
        .modal-body
          = bootstrap_form_for("user", :url => user_session_path) do |f|
            = f.email_field  :email, label: "Почтовый адрес"
            = f.password_field  :password, label: "Пароль"
            = f.check_box  :remember_me, label: "Запомнить меня"
            = f.submit 'Войти', :class=>'btn btn-success'
            = link_to "Забыли пароль?", new_password_path('user'), :class=>"pull-right"
        .modal-footer
          %button.btn.btn-danger{"data-dismiss" => "modal", type: "button"} Закрыть окно
          
