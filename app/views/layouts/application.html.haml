!!!
%html
  %head
    %meta{:name => "viewport", :content => "width=device-width, initial-scale=1.0"}
    %title= content_for?(:title) ? yield(:title) : 'Geront'
    %meta{:name => "description", :content => "#{content_for?(:description) ? yield(:description) : 'Geront'}"}
    = stylesheet_link_tag "application", media: "all", "data-turbolinks-track" => true
    = stylesheet_link_tag "application", 'https://fonts.googleapis.com/css?family=Istok+Web|Exo+2:400,300,600|Open+Sans:400,300,600,700&subset=latin,cyrillic-ext,cyrillic', :media => "all"
    = javascript_include_tag "application", "data-turbolinks-track" => true
    = csrf_meta_tags
  %body
    #wrapper.active
      = render 'layouts/sidebar'
      = render 'layouts/content'

