.col-8.col-sm-6.col-lg-8
  %h2 Забыли пароль?
  = bootstrap_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f|
    = f.email_field :email, label: "Почтовый адрес"
    = f.submit "Выслать инструкции по восстановлению", :class=>'btn btn-success'
  %br
  = render "devise/shared/links"
