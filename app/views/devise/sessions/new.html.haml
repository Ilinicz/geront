.row
  .col-8.col-sm-6.col-lg-8
    %h2 Вход
    = bootstrap_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|
      = f.email_field :email, label: "Почтовый адрес"
      = f.password_field :password, label: "Пароль"
      = f.check_box :remember_me, label: "Запомнить меня"
      = f.submit "Войти", :class=>"btn btn-success"
    %br
    = render "devise/shared/links"
