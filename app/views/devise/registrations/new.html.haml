.col-8.col-sm-6.col-lg-8
  %h2 Регистрация
  = bootstrap_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
    = f.email_field :email, label: "Ваш почтовый адрес"
    = f.password_field :password, label: "Ваш пароль", help: "Не менее 8 символов"
    = f.password_field :password_confirmation, label: "Подтвердите пароль"
    = f.submit "Зарегестрироваться", :class=>"btn btn-success"
  %br
  = render "devise/shared/links"
